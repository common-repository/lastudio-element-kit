		<custom-field action="copy">album_people</custom-field>
		<custom-field action="copy">album_latest_video</custom-field>
		<custom-field action="copy">album_backtolink</custom-field>
		<custom-field action="copy">album_available_on</custom-field>
		<custom-field action="translate">album_tracks</custom-field>

		<custom-field action="copy">event_status</custom-field>
